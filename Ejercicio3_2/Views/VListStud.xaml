                                           WidthRequest="80"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <StackLayout>
                <Button x:Name="btnDel" 
                        Text="Eliminar"
                        Clicked="btnDel_Clicked"/>
                <Button x:Name="btnEdit" 
                        Text="Editar"
                        Clicked="btnEdit_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>